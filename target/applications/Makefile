################################################################################
#                   recursive application build target def                     #
################################################################################
DIRS = led ble_adv accelerometer

################################################################################
#                             BUILD TARGETS                                    #
################################################################################
led_app :
	$(MAKE) -C led all

ble_adv_app :
	$(MAKE) -C ble_adv all

accelerometer_app :
	$(MAKE) -C accelerometer all

################################################################################
#                             CLEAN TARGETS                                    #
################################################################################
clean:
	$(foreach DIR,$(DIRS),cd $(DIR) && make clean && cd .. &&) true
